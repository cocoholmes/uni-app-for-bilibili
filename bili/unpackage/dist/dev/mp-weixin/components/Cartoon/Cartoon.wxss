.cartoonContainer .scrollView {
  height: calc(100vh - 87rpx);
}
.cartoonContainer .scrollView .fanju .mainContainer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.cartoonContainer .scrollView .fanju .mainContainer .season {
  height: 330rpx;
  width: 40%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cartoonContainer .scrollView .fanju .mainContainer .season image {
  width: 150rpx;
  height: 200rpx;
  margin: 15rpx;
  border-radius: 10rpx;
}
.cartoonContainer .scrollView .fanju .mainContainer .season text {
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cartoonContainer .scrollView .fanju .mainContainer .season text:nth-of-type(2) {
  color: #f00;
}

