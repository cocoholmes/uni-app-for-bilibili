.popularContainer {
  width: 750rpx;
}
.popularContainer .videoScorll {
  height: calc(100vh - 87rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.popularContainer .videoScorll .videoContainer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 16rpx;
  height: 260rpx;
  width: 750rpx;
  -webkit-box-pack: row;
  -webkit-justify-content: row;
          justify-content: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: 2rpx solid #e7e7e7;
}
.popularContainer .videoScorll .videoContainer .video {
  width: 40%;
  position: relative;
  height: 260rpx;
}
.popularContainer .videoScorll .videoContainer .video .poster {
  margin: 15rpx 0;
  height: 230rpx;
  width: 100%;
  border-radius: 10rpx;
}
.popularContainer .videoScorll .videoContainer .video text {
  position: absolute;
  bottom: 20rpx;
  right: 5rpx;
  color: #e7e7e7;
  background-color: #333;
  border-radius: 10rpx;
  font-size: 22rpx;
}
.popularContainer .videoScorll .videoContainer .videoDesc {
  position: relative;
  height: 260rpx;
  width: 60%;
  margin-left: 10rpx;
}
.popularContainer .videoScorll .videoContainer .videoDesc .videoTitle {
  position: absolute;
  top: 15rpx;
  font-size: 28rpx;
  margin-right: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.popularContainer .videoScorll .videoContainer .videoDesc .reason {
  position: absolute;
  top: 130rpx;
  color: #fb9e60;
  font-size: 24rpx;
  border: 1rpx solid #fb9e60;
  border-radius: 10rpx;
}
.popularContainer .videoScorll .videoContainer .videoDesc .up {
  position: absolute;
  top: 164rpx;
  color: #a1a1a1;
  font-size: 28rpx;
}
.popularContainer .videoScorll .videoContainer .videoDesc .playInfo {
  width: 100%;
  position: absolute;
  top: 200rpx;
  color: #a1a1a1;
  font-size: 28rpx;
}
.popularContainer .videoScorll .videoContainer .videoDesc .playInfo text:nth-of-type(3) {
  margin-left: 45rpx;
}
.popularContainer .videoScorll .videoContainer .videoDesc .playInfo text:nth-of-type(5) {
  position: absolute;
  right: 20rpx;
  color: #000;
}

